<!-- Button to trigger the modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newTicketModal">
  Create New Ticket
</button>

<!-- Modal for creating a new ticket -->
<div class="modal fade" id="newTicketModal" tabindex="-1" role="dialog" aria-labelledby="newTicketModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newTicketModalLabel">New Ticket</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="ticketTitle">Title</label>
            <input type="text" class="form-control" id="ticketTitle" placeholder="Enter ticket title">
          </div>
          <div class="form-group">
            <label for="ticketMessage">Message</label>
            <textarea class="form-control" id="ticketMessage" rows="3" placeholder="Enter ticket message"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="submitTicketBtn">Submit Ticket</button>
      </div>
    </div>
  </div>
</div>

