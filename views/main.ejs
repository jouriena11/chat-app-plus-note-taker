<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/chat.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Welcome to Chat Support</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row my-3 bg-black py-3">
        <div class="col-6 d-flex align-items-center">
          <a class="navbar-brand ms-3 text-white" href="#">Chat Support</a>
        </div>
        <div class="col-6 d-flex justify-content-end align-items-center">
          <a id="create-ticket-btn" class="me-3 text-white text-decoration-none" href="#" type="submit">Create Ticket</a>
          <form onsubmit="logout(event)">
              <button type="submit" class="logout-btn" type="submit">LogOut</button>
          </form>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row align-items-start">
        <div class="col-md-3">
          <div id="render-new-ticket-when-logged-in" class="ticket-stack">
            <!-- Rendering stack of tickets here -->
            <% tickets.forEach((ticket) => {%>
              <a href="#" class="text-decoration-none text-black" onclick="">
                <div class="card"> 
                  <div class="textBox">
                    <div class="textContent lh-1">
                      <h3>Ticket: <%= ticket.id %></h3>
                      <div class="pt-2">
                        <p>Title: <%= ticket.title %></p>
                        <p>Status: <%= ticket.status %></p>
                        <p>Priority: <%= ticket.priority %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            <% }) %>
            <!-- Rendering new ticket when logged in here -->
          </div>
        </div>
        <div class="col-md-8 ps-5">
          <div id="login-welcome-message" class="">
            <h1 style="animation: fade-in 1s;">Welcome to Chat Support, <%= first_name %> <%= last_name %></h1>
            <div class="row" style="animation: slide-in 1s;">
              <div class="col-md-3" style="animation: pop-in 1s;">
                <h3 class="mt-4"><b>Username:</b></h3>
                <h3><b>User ID:</b></h3>
                <h3><b>Email address:</b></h3>
                <h3><b>Role:</b></h3>
              </div>
              <div class="col-md-6">
                <h3 class="mt-4"><%= username %></h3>
                <h3><%= id %></h3>
                <h3><%= email %></h3>
                <% if (role == 'user') { %>
                  <h3><%= username %> is logged in as a User</h3>
                <% } else { %>
                  <h3><%= username %> is logged in as Support</h3>
                <% } %>
              </div>
            </div>
          </div>
          <!-- Form for creating a new ticket -->
          <div id="ticket-submission-form" class="mt-5 pe-5 d-none">
            <h3 class="font-weight-bold">Ticket Submission Form</h3>
            <form>
              <div class="form-group">
                <label for="ticket-title-input" class="my-3">Ticket Title</label>
                <input type="text" class="form-control" id="ticket-title-input" placeholder="Ticket Title">
              </div>
              <div class="form-group">
                <label for="ticket-message-input" class="my-3">Ticket Details</label>
                <textarea class="form-control" id="ticket-message-input" rows="7"></textarea>
              </div>
              <button id="submit-ticket-btn" type="submit" class="btn btn-primary my-3">Submit</button>
            </form>
          </div>
          <div id="chat" class="chat-section d-none">
            <h2>Chat Support</h2>
            <div id="chat-msg-render-canvas" class="message-section">
              <!-- Rendering sent chat message here -->

              <!-- sample html codes below for testing -->
              <!-- <div class="sender-msg">
                <span>Lorem ipsum dolor sit amet consectetur adipisicing elit. Autem, inventore!</span>
                <span>
                  10:30:00
                </span>
              </div>
              <div class="sender-msg">
                <span>Lorem ipsum dolor sit amet consectetur adipisicing elit. Autem, inventore!</span>
                <span>
                  10:30:00
                </span>
              </div>
              <div class="receiver-msg">
                <span>Lorem ipsum dolor sit amet consectetur adipisicing elit. Autem, inventore!</span>
                <span>
                  10:30:00
                </span>
              </div> -->

            </div>
            <div class="form-message-section">
              <div class="row">
                <div class="col-10">
                  <input id="chat-message-input" type="text" class="form-control">
                </div>
                <div class="col-2">
                  <button id="send-msg-btn" class="btn btn-primary w-100">Send</button>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    
    <!-- Your website content goes here -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://cdn.socket.io/4.6.0/socket.io.min.js" integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+" crossorigin="anonymous"></script>
    <script src="js/logout.js"></script>
    <script src="js/main.js"></script>
    
    <script>
      const session_user_id = <%= id %>;
    </script>
  </body>
</html>